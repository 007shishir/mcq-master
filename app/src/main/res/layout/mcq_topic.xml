<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".all_second_activity.CV_bcs_bsp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="90dp"
        android:orientation="vertical"
        android:layout_margin="7dp"
        app:cardCornerRadius="12dp"
        android:id="@+id/mCardTopic"
        app:cardBackgroundColor="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="#5fc7aa"
            android:weightSum="5">

            <TextView
                android:id="@+id/mTxt_source"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="#fe75e1a2"
                android:focusable="false"
                android:hint="Source"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="#1d1c1c"/>

            <TextView
                android:id="@+id/mTxt_topic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:focusable="false"
                android:hint="TOPIC"
                android:textAlignment="center"
                android:textColor="#1d1c1c"/>

            <TextView
                android:id="@+id/mTxt_sum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:focusable="false"
                android:hint="Summary"
                android:textAlignment="center"
                android:textColor="#1d1c1c"/>

            <TextView
                android:id="@+id/mTxt_total"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:focusable="false"
                android:hint="Extra"
                android:textAlignment="center"
                android:textColor="#1d1c1c"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>